<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/botonactivity"
    android:background="#401A34"
    android:layout_height="190dp">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="#622650">

                <ImageView
                    android:id="@+id/imagenrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vector_logo" />

                <TextView
                    android:id="@+id/campologin"
                    android:layout_width="227dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="-1dp"
                    android:gravity="center"
                    android:text="Campos"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/campourl"
                    android:layout_width="232dp"
                    android:layout_height="29dp"
                    android:layout_below="@+id/campologin"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="46dp"
                    android:gravity="center"
                    android:text="Campos"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/avatarjson"
                    android:layout_width="138dp"
                    android:layout_height="156dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="27dp"
                    android:layout_toStartOf="@+id/campologin"
                    tools:srcCompat="@tools:sample/avatars[4]" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>